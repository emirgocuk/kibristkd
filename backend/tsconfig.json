{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Node",
        "outDir": "dist",
        "rootDir": "./",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "src",
        "router",
        "*.ts",
        "entities"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}